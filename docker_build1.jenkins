#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
	step { "Create docker image"} {
	    steps {
		echo " ============== start building ============== "
		dir {'docker/toolbox'} {
			sh 'docker build . '
		}
	    }
	}
    }
}
